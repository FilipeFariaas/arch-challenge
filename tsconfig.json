{
  "compilerOptions": {
    "target": "es2017",                                  

    "module": "commonjs",                                
    "rootDir": "./src",                                  

    "typeRoots": ["./node_modules/@types"],                                  

    "resolveJsonModule": true,                        

    "allowJs": true,                                  

    "outDir": "./dist",                                   

    "esModuleInterop": true,                             
    
    "forceConsistentCasingInFileNames": true,            

    "strict": true,                                      

    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@views/*": ["./src/views/*"],
      "@config/*": ["./src/config/*"]
    }                            
  },
  "include": [
    "src/**/*"
  ]
}
